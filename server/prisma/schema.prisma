// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  uuid          String   @id @default(uuid())
  email         String   @unique
  name          String
  password      String
  photo         String?
  description   String?
  date_criation DateTime @default(now())

  chats    UserOnChat[]
  contacts UserOnContact[]

  @@map("tb_user")
}

model Chat {
  uuid String @id @default(uuid())
  text String

  users   UserOnChat[]
  send_at DateTime     @default(now())

  @@map("tb_chat")
}

model UserOnChat {
  user    User?  @relation(fields: [fk_user], references: [uuid])
  fk_user String

  chat    Chat?  @relation(fields: [fk_chat], references: [uuid])
  fk_chat String

  assignedAt DateTime @default(now())
  @@id([fk_user, fk_chat])
}

model Contact {
  uuid          String   @id @default(uuid())
  date_criation DateTime @default(now())

  users UserOnContact[]
}

model UserOnContact {
  user    User?  @relation(fields: [fk_user], references: [uuid])
  fk_user String

  contact    Contact? @relation(fields: [fk_contact], references: [uuid])
  fk_contact String

  assignedAt DateTime @default(now())
  @@id([fk_user, fk_contact])
}
